<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeatFragment">

<RelativeLayout
    android:id="@+id/name"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:paddingTop="20dp">

    <ImageView
        android:id="@+id/main"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:src="@drawable/train_time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2번칸"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/left"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:src="@drawable/train_time"
        android:layout_toLeftOf="@+id/main"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/left_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_chevron_left_24_black"
        android:background="#00fffff"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이전칸"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/left_button"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/right"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:src="@drawable/train_time"
        android:layout_toRightOf="@+id/main"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/right_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:background="#00fffff"
        android:src="@drawable/ic_baseline_chevron_right_24_black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다음칸"
        android:textSize="12sp"
        android:layout_toLeftOf="@+id/right_button"
        android:layout_centerVertical="true"/>


</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="600dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/square" />
    </RelativeLayout>

</RelativeLayout>